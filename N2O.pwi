&CONTROL
    calculation   = "relax"
    forc_conv_thr =  0.001
    max_seconds   =  86400.0
    nstep         =  100
    pseudo_dir    = "/root/MLNEB/pseudo"
    verbosity     = "low"
/

&SYSTEM
    a           =  20.0
    degauss     =  0.01
    ecutrho     =  225.0
    ecutwfc     =  25.0
    ibrav       =  1
    nat         =  3
    ntyp        =  2
    occupations = "smearing"
    smearing    = "gaussian"
/

&ELECTRONS
    conv_thr         =  1.0e-6
    diagonalization  = "david"
    electron_maxstep =  200
    mixing_beta      =  0.1
    startingpot      = "atomic"
    startingwfc      = "atomic+random"
/

&IONS
    ion_dynamics = "bfgs"
/

